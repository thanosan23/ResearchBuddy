{
    "manifest_version": 3,
    "name": "ResearchBuddy",
    "description": "Chrome extension that helps you research faster!",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "<all_urls>",
        "tabs",
        "scripting",
        "storage"
    ]
}
