{
    "manifest_version": 3,
    "name": "ResearchBuddy",
    "description": "Chrome extension that helps you research faster!",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "icons": {
        "48": "icons/logo48x48.png",
        "128": "icons/logo128x128.png"
    }
}
